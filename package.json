{
  "name": "g-talk",
  "version": "1.0.0",
  "description": "Phone call transcription service",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "build": "tsc",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "deploy": "gcloud run deploy talkhint-backend --source . --project=talkhint --region=us-central1 --platform managed --allow-unauthenticated"
  },
  "dependencies": {
    "@google-cloud/speech": "^6.1.0",
    "@google-cloud/translate": "^7.0.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "twilio": "^4.19.0",
    "uuid": "^9.0.1",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "ts-node": "^10.9.1",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.5.10",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
